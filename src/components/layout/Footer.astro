---
import Button from '@/components/ui/Button.astro'
import { themeConfig } from '@/config'
const today = new Date()
---

<footer class="footer card-depth">
  <div
    class="footer-unicorn"
    data-us-project-src="/unicorn/slidebg.json"
    data-us-production="true"
    data-us-lazyload="false"
    data-us-scale="1.45"
    data-us-dpi="3"
    data-us-alttext="Totem Grid footer background"
    data-us-arialabel="Animated background scene"
  ></div>
  <div class="footer-inner">
    <img src="/brand/logoshape.svg" width="280" height="280" alt="Totem Grid" class="footer-symbol" />

    <div class="footer-cta">
      <div class="cta-group">
        <span class="cta-eyebrow">For those who go to festivals</span>
        <Button
          href="/beta-test"
          label="Join our beta"
          variant="primary"
          icon="â–¶"
          ariaLabel="Join the Totem Grid beta"
        />
      </div>
      <div class="cta-group">
        <span class="cta-eyebrow">For those who organize them</span>
        <Button href="/partner-up" label="Connect your event" variant="secondary" />
      </div>
    </div>
  </div>
</footer>
<span class="meta-text">
  &copy; {today.getFullYear()} {themeConfig.site.author}. All rights reserved.
</span>
<style>
  .footer {
    position: relative;
    border-radius: 16px;
    background: var(--colors-indigo-40);
    overflow: hidden;
  }

  .footer-unicorn {
    position: absolute;
    inset: -28% -15% 0;
    z-index: 0;
    pointer-events: none;
    z-index: 0;
    opacity: 0.85;
  }

  .footer-unicorn canvas,
  .footer-unicorn video,
  .footer-unicorn iframe {
    pointer-events: none;
  }

  .footer-inner {
    position: relative;
    z-index: 1;
    display: flex;
    gap: 2rem;
    padding: 2rem;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  .footer-symbol {
    width: 280px;
    height: auto;
  }

  .footer-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 320px;
    gap: 1rem;
  }

  .cta-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .cta-eyebrow {
    color: var(--colors-ink-95);
    font-size: var(--font-size-m);
    font-weight: 400;
  }

  .meta-text {
    display: flex;
    justify-content: center;
    margin-top: 1rem;
    color: var(--colors-ink-50);
    font-size: var(--font-size-xs);
  }

</style>
