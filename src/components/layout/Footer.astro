---
import { themeConfig } from '@/config'
const today = new Date()
---

<footer>
  <div class="footer-content">
    <div class="footer-main">
      <div class="footer-brand">
        <h3 class="brand-name">Totem Grid</h3>
        <p class="brand-tagline">Never lose your tribe</p>
      </div>

      <div class="footer-links">
        <div class="link-group">
          <h4 class="link-title">Product</h4>
          <a href="/beta-test" class="footer-link">Beta Test</a>
          <a href="#video-demo" class="footer-link">Demo</a>
          <a href="#features" class="footer-link">Features</a>
        </div>

        <div class="link-group">
          <h4 class="link-title">Company</h4>
          <a href="/about-us" class="footer-link">About Us</a>
          <a href="/manifesto" class="footer-link">Manifesto</a>
          <a href="/partner-up" class="footer-link">Partner Up</a>
          <a href="/contribute" class="footer-link">Contribute</a>
          <a href="#contact" class="footer-link">Contact</a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="copyright">
        <span class="date">
          &copy; {today.getFullYear()}
        </span>
        {themeConfig.site.author} — All rights reserved
      </div>
      <div class="tagline">2025 – Infinity</div>
    </div>
  </div>
</footer>
<style>
  footer {
    margin-top: 5rem;
    padding: 3rem 0 2rem;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.03) 0%,
      rgba(118, 75, 162, 0.03) 100%
    );
    border-top: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }

  .footer-content {
    max-width: 64rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .footer-brand {
    text-align: left;
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 0.5rem 0;
    background: linear-gradient(135deg, var(--color-text-primary) 0%, #667eea 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .brand-tagline {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    margin: 0;
    font-style: italic;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
  }

  .link-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .link-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-link {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    padding: 0.25rem 0;
    border-radius: 0.25rem;
  }

  .footer-link:hover {
    color: var(--color-text-primary);
    transform: translateX(3px);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-s);
    color: var(--color-text-secondary);
  }

  .copyright {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .date {
    font-weight: 500;
  }

  .tagline {
    font-style: italic;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    footer {
      padding: 2rem 0 1.5rem;
    }

    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-brand {
      text-align: center;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }
</style>
