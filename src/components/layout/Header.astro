---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
---

<header>
  <nav>
    <div class="logo-container">
      {themeConfig.general.favicon && <img src="/favicon.svg" alt="favicon" class="favicon" />}
      <a href="/" class="brand-link">
        <span class="brand-name">{themeConfig.site.title}</span>
        <span class="brand-subtitle">Find your tribe, instantly</span>
      </a>
    </div>

    <div class="nav-links">
      <a href="#video-demo" class="nav-link">Demo</a>
      <a href="/about-us" class="nav-link">About</a>
      <a href="/manifesto" class="nav-link">Manifesto</a>
      <a href="/partner-up" class="nav-link">Partners</a>
      <a href="/contribute" class="nav-link">Contribute</a>
      <a href="/beta-test" class="nav-link beta-link">Beta</a>
      {themeConfig.general.themeToggle && <ThemeToggle />}
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0 0 2rem 0;
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 100%;
  }

  .logo-container {
    position: relative;
  }

  .brand-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .brand-link:hover {
    transform: translateY(-1px);
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    background: linear-gradient(135deg, var(--color-text-primary) 0%, #667eea 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .brand-subtitle {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    font-weight: 400;
    letter-spacing: 0.025em;
    margin-top: -2px;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
    background-color: var(--color-bg-secondary);
  }

  .beta-link {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white !important;
    font-weight: 600;
  }

  .beta-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
  }

  .favicon {
    position: absolute;
    width: 1.125rem;
    height: 1.125rem;
    bottom: calc(100% + 3.5rem);
    left: 0;
  }

  @media (max-width: 640px) {
    header {
      padding: 0.75rem 0;
    }

    .brand-name {
      font-size: 1.25rem;
    }

    .brand-subtitle {
      font-size: 0.7rem;
    }

    .nav-links {
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .nav-link {
      font-size: 0.75rem;
      padding: 0.3rem 0.6rem;
    }

    /* Hide some nav links on very small screens */
    .nav-link:nth-child(1),
    .nav-link:nth-child(3) {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .nav-links {
      gap: 0.25rem;
    }

    .nav-link {
      font-size: 0.7rem;
      padding: 0.25rem 0.5rem;
    }

    /* Hide more nav links on extra small screens */
    .nav-link:nth-child(2),
    .nav-link:nth-child(4) {
      display: none;
    }
  }
</style>
