---
interface ButtonProps {
  href: string
  label: string
  variant?: 'primary' | 'secondary'
  icon?: string
  ariaLabel?: string
  target?: string
  rel?: string
}

const {
  href,
  label,
  variant = 'primary',
  icon,
  ariaLabel,
  target,
  rel,
} = Astro.props as ButtonProps
---

<a
  href={href}
  class={`cta-button cta-button--${variant} card-depth`}
  aria-label={ariaLabel}
  target={target}
  rel={rel}
>
  {icon && (
    <span class="cta-button__icon" aria-hidden="true">
      {icon}
    </span>
  )}
  <span class="cta-button__label">{label}</span>
</a>

<style>
  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 0.85rem 1.85rem;
    border-radius: 999px;
    font-family: var(--font-pixel);
    font-size: 1.05rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    text-decoration: none;
    border: 4px solid transparent;
    position: relative;
    white-space: nowrap;
    leading-trim: both;
    text-edge: cap;
    font-feature-settings: 'liga' off, 'clig' off;
    font-family: Silkscreen;
    font-size: 19px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px; /* 105.263% */
    letter-spacing: -1.5px;

    box-shadow: 0 0 64px -32px rgba(159, 170, 255, 0.30), 0 -0.879px 3.516px -0.879px var(--Colors-Ink-500, #9B97CE) inset, 0 0.879px 3.516px -0.879px #FFF inset;
  }

  .cta-button__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    line-height: 1;
  }

  .cta-button--primary {
    border-radius: 40px;
    border: 4px solid var(--colors-indigo-40, #4D00FF);
    background: linear-gradient(180deg, rgba(77, 0, 255, 0.00) 0%, var(--colors-indigo-40, rgba(77, 0, 255, 0.20)) 100%), var(--colors-fuchsia-80, #FF6ADC);
    background-blend-mode: hue;
    color: var(--colors-indigo-40, #4D00FF);
  }

  .cta-button--secondary {
    border-radius: 40px;
    border: 4px solid var(--colors-teal-95, #75F1EA);
    background: linear-gradient(180deg, rgba(22, 0, 102, 0.00) 0%, var(--colors-indigo-10, rgba(22, 0, 102, 0.25)) 100%), var(--colors-indigo-40, #4D00FF);
    background-blend-mode: plus-darker, normal;
    color: var(--colors-teal-95, #75F1EA);
  }

  .cta-button:hover {
    transform: translateY(-4px);
    filter: brightness(1.05);
  }

  .cta-button:focus-visible {
    outline: 4px solid rgba(255, 255, 255, 0.6);
    outline-offset: 4px;
  }
</style>
