---
import IndexLayout from '@/layouts/IndexLayout.astro'
import Button from '@/components/ui/Button.astro'
---
<IndexLayout
  title="Countdown to 2026 - Totem Grid"
  description="Welcome the New Year with Totem Grid's revolutionary event connectivity solution."
>

  <header class="hero card-depth" aria-labelledby="landing-hero-heading">
    <div
      class="hero-unicorn"
      data-us-project-src="/unicorn/slidebg.json"
      data-us-production="true"
      data-us-lazyload="false"
      data-us-dpi="3"
      data-us-alttext="Animated Totem Grid background"
      data-us-arialabel="Animated hero background scene"
    ></div>
    <div class="hero-content">
      <img 
        src="/brand/wordmark.svg" 
        alt="Totem Grid"
        fetchpriority="high"
        loading="eager"
      />
      <div id="countdown" class="countdown-display">Loading countdown...</div>
    </div>
  </header>

  <h2 class="heading-2xl" style="margin: 0;">
    <div>
        <a href="https://www.eventbrite.com/e/the-glitch-mob-nye-party-w-special-guest-craze-tickets-1790684107369?aff=ebdsoporgprofile/" target="_blank" rel="noopener noreferrer">
        New Years Eve Seattle <br> Totem Grid Goes Live </a>
    </div>at Substation with the Glitch Mob. Meet at Midnight. Move as One.
  </h2>

  <section class="nye-side-by-side">
    <div class="event-poster-blcok">  
      <img src="/media/nye2025-substation.png" alt="NYE with TGM" style="width: 400px; height: auto;" />
    </div>
    <div class="getapp-block">
      <a class="getapp-qr" href="/getapp" aria-label="Open /getapp">
        <img
          src="/media/get-app-qr.svg"
          alt="QR code to open Totem Grid app download page"
          width="240"
          height="240"
          loading="lazy"
          decoding="async"
        />
      </a>
      <Button href="/getapp" label="Get the App" variant="primary" />
    </div>
  </section>

<style>
  .nye-side-by-side {
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: center;
    justify-content: space-between;
    background-color: var(--colors-ink-0);
  }

  .getapp-block {
    display: flex;
    flex-direction: column;
    gap: 0px;
    align-items: center;
    padding: 16px;
    justify-content: center;
    flex-grow: 1;
  }

  @media (min-width: 768px) {
    .nye-side-by-side {
      flex-direction: row;
      gap: 48px;
    }
  }

  .countdown-display {
    font-size: var(--font-size-l);
    font-weight: bold;
    color: var(--colors-teal-95);
    font-family: var(--font-mono);
    margin-top: 24px;
  }

  .getapp-section {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20px;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
  }

  .getapp-content {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    max-width: 520px;
  }

  .getapp-actions {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .getapp-qr {
  }

  .getapp-qr img {
    width: min(260px, 70vw);
    height: auto;
    border-radius: 10px;
  }

  .getapp-qr:hover {
    transform: translateY(-2px);
  }

  .getapp-qr-hint {
    font-family: var(--font-pixel);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--colors-ink-30);
    font-size: 0.95rem;
  }

  @media (min-width: 768px) {
    .getapp-section {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
      padding: 24px 28px;
    }

    .getapp-content {
      align-items: flex-start;
    }
  }
</style>

<canvas id="fireworks" style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; pointer-events: none; z-index: 1000;"></canvas>

<script>
  function updateCountdown() {
    const now = new Date();
    const nye = new Date('2026-01-01T00:00:00');
    const diff = nye - now;
    if (diff > 0) {
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)+days*24);
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      document.getElementById('countdown').innerText = `${hours} hours ${minutes} minutes  Until 2026`;
    } else {
      document.getElementById('countdown').innerText = 'Happy New Year 2026!';
    }
  }
  setInterval(updateCountdown, 1000);
  updateCountdown();


// Fireworks effect
const canvas = document.getElementById('fireworks');
const ctx = canvas.getContext('2d');
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

let particles = [];

function createParticle(x, y, color) {
  return {
    x, y,
    vx: (Math.random() - 0.5) * 10,
    vy: (Math.random() - 0.5) * 10,
    life: 100,
    color
  };
}

function updateParticles() {
  particles = particles.filter(p => p.life > 0);
  particles.forEach(p => {
    p.x += p.vx;
    p.y += p.vy;
    p.vy += 0.1; // gravity
    p.life--;
  });
}

function drawParticles() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  particles.forEach(p => {
    ctx.fillStyle = p.color;
    ctx.fillRect(p.x, p.y, 8, 8);
  });
}

function animateFireworks() {
  updateParticles();
  drawParticles();
  requestAnimationFrame(animateFireworks);
}

animateFireworks();

// Auto launch fireworks
setInterval(() => {
  const x = Math.random() * canvas.width;
  const y = Math.random() * canvas.height / 2;
  for(let i = 0; i < 30; i++) {
    particles.push(createParticle(x, y, `hsl(${Math.random()*360}, 100%, 50%)`));
  }
}, 3000);

</script>
