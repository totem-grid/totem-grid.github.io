---
import IndexLayout from '@/layouts/IndexLayout.astro'
import Hero from '@/components/widgets/Hero.astro'
import VideoDemo from '@/components/widgets/VideoDemo.astro'
import Features from '@/components/widgets/Features.astro'
import Testimonials from '@/components/widgets/Testimonials.astro'
import CTASection from '@/components/widgets/CTASection.astro'
import { themeConfig } from '@/config'
---

<IndexLayout title={themeConfig.site.title} description={themeConfig.site.description}>
  <Hero />
  <main>
    {themeConfig.totemGrid.videoDemo && <VideoDemo />}
    <Features />
    {themeConfig.totemGrid.testimonials && <Testimonials />}
    <CTASection />
  </main>
</IndexLayout>
